include ./layouts/head

body

  include ./layouts/topnav

  .formulaire
    h2 Formulaire d'inscription :
    form(action='/inscription', method='post')
      .renseignement-enfant
        h4 L'enfant : 
        label Nom
        input(type='text', name='nom_enfant', value="#{nom_enfant}")
        label Prénom
        input(type='text', name='prenom_enfant', value="#{prenom_enfant}")
        label Age  
        label 8
        input(type='radio', name='age', value='8')
        label 9
        input(type='radio', name='age', value='9')
        label 10
        input(type='radio', name='age', value='10')
        label 11
        input(type='radio', name='age', value='11')
        label 12
        input(type='radio', name='age', value='12')
        |(ans)
      .renseignement-representant
        h4 Le représentant légal :
        label Nom 
        input(type='text', name='nom_representant', value="#{nom_representant}")
        label Prénom
        input(type='text', name='prenom_representant', value="#{prenom_representant}")
        label Mail
        input(type='email', name='mail', value="#{mail}")
        label Téléphone 
        input(type='tel', maxlength='10', minlength='10', name='telephone', value="#{telephone}")
      .date
        h4 Choisissez vos mercredis :
        p Aout :
        label 26
        input(type='checkbox', name='date', value='26-08')
        p Septembre :
        label 2
        input(type='checkbox', name='date', value='02-09')
        label 9
        input(type='checkbox', name='date', value='09-09')
        label 16
        input(type='checkbox', name='date', value='16-09')
        label 23
        input(type='checkbox', name='date', value='23-09')
        label 30
        input(type='checkbox', name='date', value='30-09')
        br
        p Octobre : 
        label 7
        input(type='checkbox', name='date', value='07-10')
        label 14
        input(type='checkbox', name='date', value='14-10')
        label 21
        input(type='checkbox', name='date', value='21-10')
        label 28
        input(type='checkbox', name='date', value='28-10')
      .photo
        h4 Photographie : 
        p
          | J'autorise le Kidscoding07 à prendre et à publier des photos de mon enfant : Oui :
          input(type='radio', name='photo', value='Oui', checked='')
          | Non : 
          input(type='radio', name='photo', value='Non')
      input.bouton(type='submit', value='Envoyer')
